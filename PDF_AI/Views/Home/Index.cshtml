@model FileData
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <form asp-action="GetText" enctype="multipart/form-data" method="post">
        <div class="form-group">
            <div class="mb-3">
                <label for="formFile" class="form-label">Input File</label>
                <input class="form-control" type="file" name="file" id="formFile">              
            </div>
            <button type="submit" class="btn btn-primary">Get Text</button>
        </div>
    </form>

    <form asp-action="Index" enctype="multipart/form-data" method="post">
        <div class="form-group">
            <div class="mb-3">               
                <label for="fileName" class="form-label">File Name</label>
                <input class="form-control" type="text" name="fileName" id="fileName">

                <label for="fileData" class="form-label">File Data</label>
                <input class="form-control" type="text" name="file Data" id="fileData">
            </div>
            <button type="submit" class="btn btn-primary">Edit PDF</button>
        </div>
    </form>

    <div class="card">
        <div class="card-body">
            @if (Model?.File != null)
            {
                <textarea>@Model.File</textarea>              
            }

        </div>
        <div class="card-body embed-responsive">
            @if (Model?.FileLocation != null)
            {
                <embed src="@Model.FileLocation" type="image/png">
            }
            
        </div>
    </div>
</div>
